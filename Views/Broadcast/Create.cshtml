@model TVBroadcastScheduler.Models.Broadcast

@{
    ViewBag.Title = "Create Broadcast";
}

<h2>Create New Broadcast</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Title:</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div>
        <label>Description:</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div>
        <label>Start Time:</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" />
    </div>
    <div>
        <label>End Time:</label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" />
    </div>
    <div>
        <label>Channel:</label>
        <input asp-for="Channel" class="form-control" />
    </div>
    <div>
        <label>Category:</label>
        <input asp-for="Category" class="form-control" />
    </div>

    <button type="submit">Create</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

