@model List<TVBroadcastScheduler.Models.Broadcast>

<div class="approvals-container">
    <h2>Pending Broadcast Approvals</h2>
    <link rel="stylesheet" href="~/css/Approval.css" />


    <table class="approvals-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Start</th>
                <th>End</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.StartTime.ToString("g")</td>
                    <td>@item.EndTime.ToString("g")</td>
                    <td>
                        <form asp-action="Approve" asp-controller="Broadcast" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="text" name="comment" placeholder="Comment (optional)" />
                            <button type="submit">Approve</button>
                        </form>

                        <form asp-action="Reject" asp-controller="Broadcast" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="text" name="comment" placeholder="Reason for rejection" />
                            <button type="submit" class="reject-btn">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
